<aside class="three phpdocumentor-columns phpdocumentor-sidebar">
    <section data-search-form class="phpdocumentor-search">
        <h1 class="phpdocumentor-sidebar__category-header">Search</h1>
        <label class="phpdocumentor-label">
            <span class="visually-hidden">Search for</span>
            <input type="search" class="phpdocumentor-field phpdocumentor-search__field" placeholder="Loading .." disabled />
        </label>
    </section>
    <h1 class="phpdocumentor-sidebar__category-header">Namespaces</h1>
    {% for namespace in project.namespace.children %}
        <h2 class="phpdocumentor-sidebar__root-namespace">{{ namespace|route('class:short') }}</h2>
        <ul class="phpdocumentor-list">
            {% for child in namespace.children %}
                <li>{{ child|route('class:short') }}</li>
            {% endfor %}
        </ul>
    {% endfor %}

    <h1 class="phpdocumentor-sidebar__category-header">Packages</h1>
    {% for package in project.package.children %}
        <h2 class="phpdocumentor-sidebar__root-package">{{ package|route('class:short') }}</h2>
        <ul class="phpdocumentor-list">
            {% for child in package.children %}
                <li>{{ child|route('class:short') }}</li>
            {% endfor %}
        </ul>
    {% endfor %}
</aside>
