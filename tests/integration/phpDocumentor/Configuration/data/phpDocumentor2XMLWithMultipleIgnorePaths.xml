<phpdocumentor>
    <parser>
        <default-package-name>Default</default-package-name>
        <encoding>utf-8</encoding>
        <target>/build/cache</target>
    </parser>
    <files>
        <directory>src</directory>
        <ignore>vendor/*</ignore>
        <ignore>logs/*</ignore>
    </files>
    <transformer>
        <target>build/docs</target>
    </transformer>
    <logging>
        <level>error</level>
    </logging>
    <transformations>
        <template name="clean"/>
    </transformations>
</phpdocumentor>
